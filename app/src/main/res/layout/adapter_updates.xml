<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_border"
        android:padding="@dimen/value_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help send 42 inner-city kids on a week-long adventure exploring the Great Outdoors! This year we&apos;re headed to the stunning mountains of Southwest Virginia and hiking along the Appalachian Trail to the summit of Mt. Rogers."
            android:id="@+id/updates"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/value_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by:"
            android:id="@+id/textView29"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/updates" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rahul Patel"
            android:id="@+id/user_name_s"
            android:layout_below="@+id/updates"
            android:layout_toRightOf="@+id/textView29"
            android:layout_toEndOf="@+id/textView29"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Weeks ago"
            android:id="@+id/date_added"
            android:layout_below="@+id/updates"
            android:layout_toRightOf="@+id/user_name_s"
            android:layout_toEndOf="@+id/user_name_s"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>


</LinearLayout>