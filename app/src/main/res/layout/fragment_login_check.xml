<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rock.reward.fragment.LoginCheckFragment">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/value_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/user_placeholder"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Login"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:padding="@dimen/value_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please login to view your profile"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:padding="@dimen/value_10" />

        <com.rock.reward.utils.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_btn"
            android:layout_gravity="center"
            android:padding="@dimen/value_10"
            android:textColor="@color/white"
            android:textSize="@dimen/size_title_text"
            android:background="@drawable/round_login_button" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

</FrameLayout>
